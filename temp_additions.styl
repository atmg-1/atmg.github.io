// 鎶湳鍣ㄧ墖鍔ㄧ敥
.post-block {
  position: relative;
  overflow: hidden;
}

.post-block::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(0, 255, 255, 0.1), transparent);
  transform: rotate(0deg);
  animation: shine 8s infinite linear;
  pointer-events: none;
  z-index: 1;
}

@keyframes shine {
  0% { transform: rotate(0deg) translateX(-50%) translateY(-50%); }
  100% { transform: rotate(360deg) translateX(-50%) translateY(-50%); }
}

// 鐣岄潰鍣ㄧ墖鍏夋椫鍔ㄧ敥
.post-block:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0, 255, 255, 0.3), 0 15px 35px rgba(255, 0, 255, 0.2);
}

// 婊戝姩鍣ㄧ墖鍔ㄧ敥
@keyframes slideInFromLeft {
  0% {
    opacity: 0;
    transform: translateX(-50px);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInFromRight {
  0% {
    opacity: 0;
    transform: translateX(50px);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

.post-block:nth-child(odd) {
  animation: slideInFromLeft 0.8s ease-out forwards;
}

.post-block:nth-child(even) {
  animation: slideInFromRight 0.8s ease-out forwards;
}

// 鐐瑰嚮娉㈡墖鏁堟灉
.wave-effect {
  position: absolute;
  border-radius: 50%;
  background: rgba(0, 255, 255, 0.4);
  transform: scale(0);
  animation: wave 0.6s linear;
  pointer-events: none;
}

@keyframes wave {
  to {
    transform: scale(2.5);
    opacity: 0;
  }
}

// 娴佸姩鍏夌嚎
.creative-border {
  position: relative;
  border: 1px solid transparent;
  background: 
    linear-gradient(#000, #000) padding-box,
    linear-gradient(45deg, #00ffff, #ff00ff) border-box;
  border-radius: 8px;
  box-shadow: 
    0 0 10px rgba(0, 255, 255, 0.3),
    0 0 20px rgba(255, 0, 255, 0.2);
}

// 娴佸姩鍏夌嚎妯悜
.creative-border::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 2px;
  background: linear-gradient(90deg, transparent, #00ffff, #ff00ff, transparent);
  animation: horizontalGlow 3s linear infinite;
}

// 娴佸姩鍏夌嚎绾靛悜
.creative-border::after {
  content: '';
  position: absolute;
  top: -100%;
  right: 0;
  width: 2px;
  height: 100%;
  background: linear-gradient(180deg, transparent, #00ffff, #ff00ff, transparent);
  animation: verticalGlow 3s linear infinite;
}

@keyframes horizontalGlow {
  0% { left: -100%; }
  100% { left: 100%; }
}

@keyframes verticalGlow {
  0% { top: -100%; }
  100% { top: 100%; }
}

// 3D鍗＄墖鏁堟灉
.card-3d {
  transform-style: preserve-3d;
  perspective: 1000px;
}

.card-3d:hover {
  transform: translateZ(20px);
}

.card-3d .card-content {
  transform: translateZ(20px);
  transition: transform 0.3s ease;
}

// 寰厜鍣ㄧ墖
.micro-glow {
  position: relative;
}

.micro-glow::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 8px;
  box-shadow: 
    inset 0 0 15px rgba(0, 255, 255, 0.3),
    inset 0 0 30px rgba(255, 0, 255, 0.2),
    0 0 15px rgba(0, 255, 255, 0.2);
  pointer-events: none;
  z-index: -1;
}

// 鐣岄潰鍣ㄧ墖鍙嶅脊鍔ㄧ敥
.post-block {
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

// 鐐瑰嚮鍝嶅簲鍣ㄧ礌
.click-response {
  position: fixed;
  width: 20px;
  height: 20px;
  border: 2px solid #00ffff;
  border-radius: 50%;
  pointer-events: none;
  animation: clickResponse 0.6s ease-out;
  z-index: 9999;
}

@keyframes clickResponse {
  0% {
    transform: scale(0.1);
    opacity: 1;
  }
  100% {
    transform: scale(2);
    opacity: 0;
  }
}

// 娴佸姩鍣ㄧ礌
.floating-particle {
  position: fixed;
  width: 2px;
  height: 2px;
  background: #00ffff;
  border-radius: 50%;
  pointer-events: none;
  z-index: -1;
  animation: floatMove 10s linear infinite;
}

.floating-particle:nth-child(3n) {
  background: #ff00ff;
  animation-duration: 15s;
}

.floating-particle:nth-child(5n) {
  background: #ffff00;
  animation-duration: 20s;
}

@keyframes floatMove {
  0% {
    transform: translateY(100vh) translateX(0);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 0.8;
  }
  100% {
    transform: translateY(-100px) translateX(100px);
    opacity: 0;
  }
}

// 鑷畾涔夊姞杞界敾
.custom-loader {
  width: 40px;
  height: 40px;
  border: 4px solid rgba(0, 255, 255, 0.2);
  border-top: 4px solid #00ffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 20px auto;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

// 鏇存柊鐨勮儗鏅紶鍔ㄧ敥
@keyframes enhancedBackground {
  0% {
    background-position: 0% 0%, 0% 0%, 0% 0%;
  }
  100% {
    background-position: 100% 100%, 100% 100%, 100% 100%;
  }
}

body {
  animation: enhancedBackground 20s ease infinite;
}

// 鏂囧瓧娴佸姩鍔ㄧ敥
.text-flow {
  position: relative;
  overflow: hidden;
}

.text-flow::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.2), transparent);
  animation: textFlow 2s linear infinite;
}

@keyframes textFlow {
  0% { left: -100%; }
  100% { left: 100%; }
}

// 娴佸姩鍣ㄧ礌瀹瑰櫒
.particle-container {
  position: absolute;
  pointer-events: none;
  overflow: visible;
}

.particle {
  position: absolute;
  width: 6px;
  height: 6px;
  border-radius: 50%;
  animation: particleMove 0.6s ease-out forwards;
}

@keyframes particleMove {
  0% {
    transform: translate(0, 0);
    opacity: 1;
  }
  100% {
    transform: translate(var(--tx), var(--ty));
    opacity: 0;
  }
}

// 鑷畾涔夋粴鍔ㄦ潯
.custom-scrollbar::-webkit-scrollbar {
  width: 8px;
}

.custom-scrollbar::-webkit-scrollbar-track {
  background: rgba(10, 5, 20, 0.6);
}

.custom-scrollbar::-webkit-scrollbar-thumb {
  background: linear-gradient(45deg, #00ffff, #ff00ff);
  border-radius: 4px;
}

.custom-scrollbar::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(45deg, #ff00ff, #00ffff);
}

// 鍏夋牸鍔ㄧ敥
.grid-animation {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    linear-gradient(rgba(0, 255, 255, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 0, 255, 0.03) 1px, transparent 1px);
  background-size: 30px 30px;
  pointer-events: none;
  z-index: -2;
  animation: gridMove 20s linear infinite;
}

@keyframes gridMove {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 30px 30px;
  }
}

// 娲涘姩鍣ㄧ礌
.bubble {
  position: fixed;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(0, 255, 255, 0.2) 0%, transparent 70%);
  pointer-events: none;
  z-index: -1;
}

// 鑷畾涔夋椂闂磋
.custom-timeline {
  position: relative;
}

.custom-timeline::before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 50%;
  width: 2px;
  background: linear-gradient(to bottom, transparent, #00ffff, transparent);
  transform: translateX(-50%);
}

// 鍗＄墖鍐插嚮鏁堟灉
.card-impact {
  animation: cardImpact 0.5s ease;
}

@keyframes cardImpact {
  0% { transform: scale(1); }
  50% { transform: scale(1.02); }
  100% { transform: scale(1); }
}

// 娴佸姩鍏夋潯
.flow-bar {
  position: relative;
  overflow: hidden;
}

.flow-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  height: 100%;
  width: 100%;
  background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.4), transparent);
  animation: flowBar 2s linear infinite;
}

@keyframes flowBar {
  0% { left: -100%; }
  100% { left: 100%; }
}

// 娲涘姩鍣ㄧ礌瀹瑰櫒
.bubble-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1;
}

// 娣诲姞鍙嶅脊鍣ㄧ礌
.bounce-effect {
  animation: bounce 0.6s ease;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
  40% {transform: translateY(-20px);}
  60% {transform: translateY(-10px);}
}

// 鏇存柊鐨勮儗鏅贩鍚堟ā寮
body {
  background-blend-mode: screen, overlay, overlay, screen, screen, screen, screen, normal, normal, multiply;
}

// 鏁版嵁娴佸姩鍔ㄧ敥
.data-flow {
  animation: dataFlowMove 3s linear infinite;
}

@keyframes dataFlowMove {
  0% { transform: translateX(100%); }
  100% { transform: translateX(-100%); }
}

// 鍏夋诞鍔ㄧ敥
.light-float {
  animation: lightFloat 4s ease-in-out infinite;
}

@keyframes lightFloat {
  0%, 100% { transform: translateY(0) translateX(0); }
  25% { transform: translateY(-5px) translateX(5px); }
  50% { transform: translateY(0) translateX(0); }
  75% { transform: translateY(5px) translateX(-5px); }
}

// 鏂囧瓧鍐插嚮鏁堟灉
.text-impact {
  animation: textImpact 0.3s ease;
}

@keyframes textImpact {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

// 娴佸姩鍏夌偣
.flow-dot {
  animation: flowDot 2s linear infinite;
}

@keyframes flowDot {
  0% { background-position: 0% 50%; }
  100% { background-position: 100% 50%; }
}

// 鍙岄噸鏁呴殰鏁堟灉
.double-glitch {
  position: relative;
}

.double-glitch::before,
.double-glitch::after {
  content: attr(data-text);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.double-glitch::before {
  animation: glitchShift 0.3s infinite;
  clip-path: polygon(0 0, 100% 0, 100% 45%, 0 45%);
}

.double-glitch::after {
  animation: glitchShiftReverse 0.3s infinite;
  clip-path: polygon(0 55%, 100% 55%, 100% 100%, 0 100%);
}

@keyframes glitchShift {
  0% { transform: translate(0); }
  20% { transform: translate(-3px, 3px); }
  40% { transform: translate(-3px, -3px); }
  60% { transform: translate(3px, 3px); }
  80% { transform: translate(3px, -3px); }
  100% { transform: translate(0); }
}

@keyframes glitchShiftReverse {
  0% { transform: translate(0); }
  20% { transform: translate(3px, -3px); }
  40% { transform: translate(3px, 3px); }
  60% { transform: translate(-3px, -3px); }
  80% { transform: translate(-3px, 3px); }
  100% { transform: translate(0); }
}

// 鍗＄墖娴佸姩鍏夋晥鏋
.card-flow-light {
  position: relative;
  overflow: hidden;
}

.card-flow-light::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(0, 255, 255, 0.1), rgba(255, 0, 255, 0.1), transparent);
  transform: rotate(0deg);
  animation: cardShine 6s infinite linear;
  pointer-events: none;
  z-index: 1;
}

@keyframes cardShine {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

// 鑷畾涔夊奖瀛
.custom-shadow {
  position: relative;
}

.custom-shadow::after {
  content: '';
  position: absolute;
  top: 5px;
  left: 5px;
  right: -5px;
  bottom: -5px;
  background: inherit;
  filter: blur(10px) opacity(0.5);
  z-index: -1;
  border-radius: inherit;
}

// 鍏夋诞杈规
.glowing-border {
  position: relative;
}

.glowing-border::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, #00ffff, #ff00ff, #ffff00, #00ff00);
  border-radius: inherit;
  z-index: -1;
  animation: borderRotate 4s linear infinite;
}

@keyframes borderRotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

// 鏂囧瓧鍏夋潌鍔ㄧ敥
.text-beam {
  position: relative;
  overflow: hidden;
}

.text-beam::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100px;
  height: 100%;
  background: linear-gradient(to right, transparent, rgba(0, 255, 255, 0.3), transparent);
  animation: textBeam 3s infinite;
}

@keyframes textBeam {
  0% { left: -100%; }
  100% { left: 100%; }
}