/* 高级赛博朋克效果增强 */

/* 3D旋转霓虹文字 */
.n3on-3d {
  position: relative;
  transform-style: preserve-3d;
  perspective: 1000px;
}

.n3on-3d:hover {
  animation: rotate3d 3s infinite linear;
}

@keyframes rotate3d {
  0% { transform: rotateX(0) rotateY(0) rotateZ(0); }
  100% { transform: rotateX(360deg) rotateY(360deg) rotateZ(360deg); }
}

/* 液态霓虹效果 */
.liquid-neon {
  position: relative;
  overflow: hidden;
}

.liquid-neon::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(
    transparent,
    rgba(0, 255, 255, 0.5),
    transparent 30%
  );
  animation: rotate 4s linear infinite;
  z-index: -1;
}

@keyframes rotate {
  100% { transform: rotate(360deg); }
}

/* 光谱扫描效果 */
.spectrum-scan {
  position: relative;
  overflow: hidden;
}

.spectrum-scan::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100px;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(0, 255, 255, 0.6),
    rgba(255, 0, 255, 0.6),
    rgba(255, 255, 0, 0.6),
    transparent
  );
  animation: scan 2s linear infinite;
}

@keyframes scan {
  0% { left: -100%; }
  100% { left: 100%; }
}

/* 电弧连接效果 */
.arc-connect {
  position: relative;
}

.arc-connect::before,
.arc-connect::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: inherit;
  box-shadow: 
    0 0 10px #00ffff,
    0 0 20px #00ffff,
    0 0 30px #00ffff,
    0 0 40px #ff00ff,
    0 0 70px #ff00ff,
    0 0 80px #ff00ff;
  animation: arc-pulse 3s infinite alternate;
  pointer-events: none;
  z-index: -1;
  opacity: 0.3;
}

.arc-connect::after {
  animation-delay: 0.5s;
}

@keyframes arc-pulse {
  0% { opacity: 0.3; box-shadow: 
    0 0 10px #00ffff,
    0 0 20px #00ffff,
    0 0 30px #00ffff,
    0 0 40px #ff00ff,
    0 0 70px #ff00ff,
    0 0 80px #ff00ff;
  }
  100% { opacity: 0.8; box-shadow: 
    0 0 20px #00ffff,
    0 0 40px #00ffff,
    0 0 60px #00ffff,
    0 0 80px #ff00ff,
    0 0 140px #ff00ff,
    0 0 160px #ff00ff;
  }
}

/* 全息投影效果 */
.hologram-project {
  position: relative;
  overflow: hidden;
}

.hologram-project::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    linear-gradient(0deg, transparent 50%, rgba(0, 255, 255, 0.1) 50%),
    linear-gradient(90deg, transparent 50%, rgba(255, 0, 255, 0.1) 50%);
  background-size: 4px 4px;
  animation: hologram-grid 0.5s linear infinite;
  pointer-events: none;
  z-index: 1;
}

@keyframes hologram-grid {
  0% { background-position: 0 0; }
  100% { background-position: 4px 4px; }
}

/* 粒子网络效果 */
.particle-network {
  position: relative;
  overflow: hidden;
}

.particle-network::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 10% 20%, rgba(0, 255, 255, 0.1) 0%, transparent 20%),
    radial-gradient(circle at 90% 80%, rgba(255, 0, 255, 0.1) 0%, transparent 20%),
    radial-gradient(circle at 50% 40%, rgba(0, 255, 255, 0.05) 0%, transparent 15%),
    radial-gradient(circle at 70% 30%, rgba(255, 0, 255, 0.05) 0%, transparent 3%);
  animation: particle-network 8s linear infinite;
  pointer-events: none;
  z-index: -1;
}

@keyframes particle-network {
  0% { 
    background-position: 
      10% 20%, 
      90% 80%, 
      50% 40%, 
      70% 30%;
  }
  100% { 
    background-position: 
      15% 25%, 
      95% 85%, 
      55% 45%, 
      75% 35%;
  }
}

/* 霓虹脉冲波 */
.neon-pulse-wave {
  position: relative;
  overflow: hidden;
}

.neon-pulse-wave::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at center, rgba(0, 255, 255, 0.1) 0%, transparent 70%),
    radial-gradient(circle at center, rgba(255, 0, 255, 0.1) 0%, transparent 60%);
  animation: pulse-wave 4s infinite;
  pointer-events: none;
  z-index: -1;
}

@keyframes pulse-wave {
  0% { 
    background-size: 0% 0%, 0% 0%;
    opacity: 0.3;
  }
  50% { 
    background-size: 200% 200%, 150% 150%;
    opacity: 0.6;
  }
  100% { 
    background-size: 0% 0%, 0% 0%;
    opacity: 0.3;
  }
}

/* 故障艺术增强版 */
.glitch-enhanced {
  position: relative;
}

.glitch-enhanced::before,
.glitch-enhanced::after {
  content: attr(data-text);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.glitch-enhanced::before {
  left: 3px;
  text-shadow: -3px 0 #ff00c1;
  clip: rect(44px, 450px, 56px, 0);
  animation: glitch-enhanced-anim 0.3s infinite linear alternate-reverse;
}

.glitch-enhanced::after {
  left: -3px;
  text-shadow: -3px 0 #00fff9;
  clip: rect(44px, 450px, 56px, 0);
  animation: glitch-enhanced-anim2 0.3s infinite linear alternate-reverse;
}

@keyframes glitch-enhanced-anim {
  0% { clip: rect(42px, 9999px, 44px, 0); transform: translate(0); }
  20% { clip: rect(12px, 9999px, 59px, 0); transform: translate(-5px, 2px); }
  40% { clip: rect(48px, 9999px, 29px, 0); transform: translate(-3px, -3px); }
  60% { clip: rect(42px, 9999px, 73px, 0); transform: translate(4px, 3px); }
  80% { clip: rect(63px, 9999px, 27px, 0); transform: translate(2px, -4px); }
  100% { clip: rect(34px, 9999px, 55px, 0); transform: translate(0); }
}

@keyframes glitch-enhanced-anim2 {
  0% { clip: rect(65px, 9999px, 100px, 0); transform: translate(0); }
  20% { clip: rect(52px, 9999px, 74px, 0); transform: translate(4px, -2px); }
  40% { clip: rect(79px, 9999px, 85px, 0); transform: translate(-3px, 3px); }
  60% { clip: rect(75px, 9999px, 5px, 0); transform: translate(5px, 2px); }
  80% { clip: rect(67px, 9999px, 61px, 0); transform: translate(-4px, -3px); }
  100% { clip: rect(14px, 9999px, 79px, 0); transform: translate(0); }
}

/* 霓虹流动边框 */
.neon-flow-border {
  position: relative;
  border: 2px solid transparent;
  background-clip: padding-box;
}

.neon-flow-border::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, #00ffff, #ff00ff, #ffff00, #00ff00, #00ffff);
  background-size: 400% 400%;
  z-index: -1;
  border-radius: inherit;
  animation: flow-border 3s linear infinite;
}

@keyframes flow-border {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* 光线追踪效果 */
.ray-tracing {
  position: relative;
  overflow: hidden;
}

.ray-tracing::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    linear-gradient(transparent 50%, rgba(0, 255, 255, 0.05) 50%),
    linear-gradient(90deg, transparent 50%, rgba(255, 0, 255, 0.05) 50%);
  background-size: 10px 10px;
  animation: ray-trace 0.1s linear infinite;
  pointer-events: none;
  z-index: -1;
}

@keyframes ray-trace {
  0% { background-position: 0 0; }
  100% { background-position: 10px 10px; }
}

/* 全息浮动效果 */
.hologram-float {
  position: relative;
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
  100% { transform: translateY(0px); }
}

/* 霓虹扫描线增强 */
.neon-scan-enhanced {
  position: relative;
  overflow: hidden;
}

.neon-scan-enhanced::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100px;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(0, 255, 255, 0.4),
    rgba(255, 0, 255, 0.4),
    transparent
  );
  animation: scan-enhanced 1.5s linear infinite;
}

@keyframes scan-enhanced {
  0% { left: -100%; }
  100% { left: 100%; }
}

/* 霓虹辉光效果 */
.neon-glow-enhanced {
  position: relative;
}

.neon-glow-enhanced::after {
  content: '';
  position: absolute;
  top: -5px;
  left: -5px;
  right: -5px;
  bottom: -5px;
  background: linear-gradient(45deg, #00ffff, #ff00ff, #ffff00, #00ff00);
  z-index: -1;
  filter: blur(20px);
  opacity: 0.5;
  animation: glow-pulse 3s ease-in-out infinite alternate;
}

@keyframes glow-pulse {
  0% { opacity: 0.3; }
  100% { opacity: 0.7; }
}

/* 光谱边框 */
.spectrum-border {
  position: relative;
  border: 2px solid transparent;
}

.spectrum-border::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(
    60deg,
    #00ffff, #00ff80, #00ff00, #80ff00, #ffff00,
    #ff8000, #ff0000, #ff0080, #ff00ff, #8000ff,
    #0000ff, #0080ff, #00ffff
  );
  background-size: 1000% 1000%;
  z-index: -1;
  border-radius: inherit;
  animation: spectrum-border-animation 3s linear infinite;
}

@keyframes spectrum-border-animation {
  0% { background-position: 0% 0%; }
  100% { background-position: 100% 100%; }
}

/* 霓虹波纹效果 */
.neon-ripple {
  position: relative;
  overflow: hidden;
}

.neon-ripple::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20px;
  height: 20px;
  background: rgba(0, 255, 255, 0.5);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: ripple-animation 2s infinite;
  z-index: -1;
}

@keyframes ripple-animation {
  0% {
    width: 20px;
    height: 20px;
    opacity: 1;
  }
  100% {
    width: 200px;
    height: 200px;
    opacity: 0;
  }
}

/* 全息纹理 */
.hologram-texture {
  position: relative;
  overflow: hidden;
}

.hologram-texture::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    linear-gradient(0deg, transparent 50%, rgba(0, 255, 255, 0.03) 50%),
    linear-gradient(90deg, transparent 50%, rgba(255, 0, 255, 0.03) 50%),
    radial-gradient(circle at 20% 30%, rgba(0, 255, 255, 0.1) 0%, transparent 20%),
    radial-gradient(circle at 80% 70%, rgba(255, 0, 255, 0.1) 0%, transparent 20%);
  background-size: 
    8px 8px, 
    8px 8px, 
    150px 150px, 
    200px 200px;
  animation: hologram-texture-move 10s linear infinite;
  pointer-events: none;
  z-index: -1;
}

@keyframes hologram-texture-move {
  0% { 
    background-position: 
      0 0, 
      0 0, 
      0 0, 
      0 0; 
  }
  100% { 
    background-position: 
      8px 8px, 
      8px 8px, 
      150px 150px, 
      200px 200px; 
  }
}