// 流浪地球风格 - 未来科幻感设计
// 完全重新设计，确保无闪烁、无问题效果

// 主要背景色 - 深邃太空
$body-bg = #0a1a2a
$text-color = #e0f0ff
$primary-color = #4fc3f7
$accent-color = #29b6f6

// 全局背景
body
  background: $body-bg
  color: #e8f4fd  // 更亮的文字颜色
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
  font-weight: 300
  line-height: 1.7
  min-height: 100vh
  position: relative
  overflow-x: hidden

// 星空背景效果 - 使用伪元素创建
body::before
  content: ''
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: $body-bg
  z-index: -1000
  pointer-events: none

// 星星点点效果
body::after
  content: ''
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-image: 
    radial-gradient(1.5px 1.5px at 50px 50px, #81d4fa, transparent),
    radial-gradient(1px 1px at 100px 150px, #e0f0ff, transparent),
    radial-gradient(1px 1px at 200px 80px, #4fc3f7, transparent),
    radial-gradient(1px 1px at 250px 200px, #81d4fa, transparent),
    radial-gradient(1px 1px at 300px 100px, #e0f0ff, transparent),
    radial-gradient(1px 1px at 400px 180px, #4fc3f7, transparent),
    radial-gradient(1px 1px at 500px 60px, #81d4fa, transparent),
    radial-gradient(1px 1px at 600px 220px, #e0f0ff, transparent),
    radial-gradient(1px 1px at 700px 120px, #4fc3f7, transparent),
    radial-gradient(1px 1px at 50px 250px, #81d4fa, transparent),
    radial-gradient(1px 1px at 150px 300px, #e0f0ff, transparent),
    radial-gradient(1px 1px at 350px 350px, #4fc3f7, transparent)
  background-repeat: repeat
  background-size: 300px 300px
  z-index: -999
  pointer-events: none

// 添加科技网格背景
body::before
  content: ''
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-image: 
    linear-gradient(rgba(128, 222, 234, 0.05) 1px, transparent 1px),
    linear-gradient(90deg, rgba(128, 222, 234, 0.05) 1px, transparent 1px)
  background-size: 40px 40px
  z-index: -998
  pointer-events: none

// 添加动态能量场效果
body::after
  content: ''
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: radial-gradient(
    circle at center,
    transparent 0%,
    rgba(128, 222, 234, 0.05) 70%,
    rgba(128, 222, 234, 0.1) 100%
  )
  z-index: -997
  pointer-events: none
  animation: energy-field 20s infinite alternate

// 添加能量场动画
@keyframes energy-field
  0%
    transform: scale(1)
    opacity: 0.3
  100%
    transform: scale(1.05)
    opacity: 0.5

// 添加扫描线效果
.scan-line
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 8px
  background: linear-gradient(
    to bottom,
    rgba(128, 222, 234, 0) 0%,
    rgba(128, 222, 234, 0.3) 50%,
    rgba(128, 222, 234, 0) 100%
  )
  z-index: -996
  animation: scan 8s linear infinite
  pointer-events: none

@keyframes scan
  0%
    top: 0
    opacity: 0
  10%
    opacity: 0.5
  50%
    opacity: 1
  90%
    opacity: 0.5
  100%
    top: 100%
    opacity: 0

// 添加电路板纹理
.circuit-pattern
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-image: 
    linear-gradient(rgba(128, 222, 234, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(128, 222, 234, 0.03) 1px, transparent 1px),
    radial-gradient(circle at 10% 20%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 20% 40%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 30% 60%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 40% 80%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 60% 10%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 70% 30%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 80% 50%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 90% 70%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px)
  background-size: 
    60px 60px,
    60px 60px,
    100px 100px,
    100px 100px,
    100px 100px,
    100px 100px,
    100px 100px,
    100px 100px,
    100px 100px,
    100px 100px
  z-index: -995
  pointer-events: none
  animation: circuit-pulse 15s infinite alternate

// 添加高级霓虹光效
.neon-glow
  position: relative
  &::before
    content: ''
    position: absolute
    top: -5px
    left: -5px
    right: -5px
    bottom: -5px
    border: 2px solid rgba(128, 222, 234, 0.6)
    border-radius: inherit
    filter: blur(10px)
    z-index: -1
    animation: neon-pulse 3s infinite alternate

@keyframes neon-pulse
  0%
    opacity: 0.3
    box-shadow: 0 0 10px rgba(128, 222, 234, 0.3)
  100%
    opacity: 0.8
    box-shadow: 0 0 20px rgba(128, 222, 234, 0.6)

// 添加全息投影效果
.hologram-effect
  position: relative
  overflow: hidden
  &::after
    content: ''
    position: absolute
    top: -50%
    left: -60%
    width: 20px
    height: 200%
    background: rgba(255, 255, 255, 0.3)
    transform: rotate(25deg)
    transition: all 0.6s

.hologram-effect:hover::after
  left: 120%
  transition: left 0.6s

// 添加高级卡片样式
.post-block, .sidebar, .header, .footer, .card
  background: rgba(20, 40, 60, 0.95)
  border: 1px solid rgba(128, 222, 234, 0.6)  // 使用更亮的颜色
  box-shadow: 
    0 0 25px rgba(128, 222, 234, 0.25),  // 更亮的发光效果
    inset 0 0 15px rgba(128, 222, 234, 0.2),  // 内部发光更明显
    0 0 40px rgba(128, 222, 234, 0.1)  // 外围发光
  border-radius: 8px
  padding: 25px  // 增加内边距改善阅读空间
  backdrop-filter: none  // 移除模糊效果提高清晰度
  position: relative
  overflow: hidden
  transition: all 0.3s ease

.post-block:hover, .sidebar:hover, .header:hover, .footer:hover, .card:hover
  box-shadow: 
    0 0 35px rgba(128, 222, 234, 0.4),
    inset 0 0 20px rgba(128, 222, 234, 0.3),
    0 0 50px rgba(128, 222, 234, 0.2)
  transform: translateY(-3px)

// 添加浮动粒子效果
.floating-particles
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  pointer-events: none
  z-index: -1

.particle
  position: absolute
  border-radius: 50%
  background: rgba(128, 222, 234, 0.6)
  animation: float 15s infinite linear

@keyframes float
  0%
    transform: translateY(0) rotate(0deg)
    opacity: 0
  10%
    opacity: 1
  90%
    opacity: 1
  100%
    transform: translateY(-100vh) rotate(360deg)
    opacity: 0

// 添加科技按钮样式
.button-tech
  background: linear-gradient(45deg, rgba(128, 222, 234, 0.1), rgba(128, 222, 234, 0.3))
  border: 1px solid rgba(128, 222, 234, 0.5)
  color: #80deea
  padding: 12px 24px
  border-radius: 6px
  cursor: pointer
  transition: all 0.3s ease
  position: relative
  overflow: hidden
  font-family: 'Orbitron', 'Segoe UI', sans-serif

.button-tech:hover
  background: linear-gradient(45deg, rgba(128, 222, 234, 0.3), rgba(128, 222, 234, 0.5))
  box-shadow: 0 0 15px rgba(128, 222, 234, 0.5)
  color: #e0f7fa
  transform: translateY(-2px)

// 添加数据流效果
.data-stream-bar
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 4px
  background: linear-gradient(90deg, transparent, rgba(128, 222, 234, 0.8), transparent)
  animation: data-flow 2s linear infinite
  z-index: 9999
  pointer-events: none

@keyframes data-flow
  0%
    transform: translateX(-100%)
  100%
    transform: translateX(100%)

// 添加高级文字效果
.advanced-text-glow
  position: relative
  color: #e8f4fd
  text-shadow: 
    0 0 5px rgba(128, 222, 234, 0.5),
    0 0 10px rgba(128, 222, 234, 0.3),
    0 0 15px rgba(128, 222, 234, 0.2)

// 添加脉冲效果
.pulse-element
  animation: pulse-animation 2s infinite

@keyframes pulse-animation
  0%
    box-shadow: 0 0 0 0 rgba(128, 222, 234, 0.7)
  70%
    box-shadow: 0 0 0 15px rgba(128, 222, 234, 0)
  100%
    box-shadow: 0 0 0 0 rgba(128, 222, 234, 0)

// 添加高级导航样式
.nav-tech
  background: rgba(20, 40, 60, 0.8)
  backdrop-filter: none
  border-bottom: 1px solid rgba(128, 222, 234, 0.3)
  padding: 15px 0

.nav-tech .menu-item a
  color: #bbdefb
  padding: 10px 20px
  border-radius: 5px
  transition: all 0.3s ease
  position: relative
  overflow: hidden

.nav-tech .menu-item a::before
  content: ''
  position: absolute
  top: 0
  left: -100%
  width: 100%
  height: 100%
  background: linear-gradient(90deg, transparent, rgba(128, 222, 234, 0.2), transparent)
  transition: left 0.5s

.nav-tech .menu-item a:hover::before
  left: 100%

.nav-tech .menu-item a:hover
  color: #80deea
  background: rgba(128, 222, 234, 0.1)
  text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)

// 页面整体容器
html, body
  background: $body-bg
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
  color: #e8f4fd  // 更亮的文字颜色
  min-height: 100vh
  position: relative

// 增强科技感背景
body::before
  content: ''
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: 
    radial-gradient(circle at 10% 20%, rgba(128, 222, 234, 0.05) 0%, transparent 20%),
    radial-gradient(circle at 90% 80%, rgba(128, 222, 234, 0.05) 0%, transparent 20%),
    radial-gradient(circle at 50% 50%, rgba(128, 222, 234, 0.03) 0%, transparent 30%)
  pointer-events: none
  z-index: -1001

// 网格背景
body::after
  content: ''
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-image: 
    linear-gradient(rgba(128, 222, 234, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(128, 222, 234, 0.03) 1px, transparent 1px)
  background-size: 50px 50px
  pointer-events: none
  z-index: -1000

// 标题样式 - 使用科幻字体
h1, h2, h3, h4, h5, h6
  font-family: 'Orbitron', 'Segoe UI', sans-serif
  color: #80deea  // 更亮的蓝色
  text-shadow: 0 0 3px rgba(128, 222, 234, 0.5), 0 0 8px rgba(128, 222, 234, 0.3)
  margin: 20px 0 15px 0
  font-weight: 500
  text-rendering: optimizeLegibility  // 优化文字渲染
  -webkit-font-smoothing: antialiased  // 抗锯齿

h1
  font-size: 2.2em
  color: #80deea  // 更亮的蓝色
  text-shadow: 0 0 5px rgba(128, 222, 234, 0.8), 0 0 15px rgba(128, 222, 234, 0.4)

h2
  font-size: 1.8em
  color: #80deea  // 更亮的蓝色
  text-shadow: 0 0 5px rgba(128, 222, 234, 0.7), 0 0 12px rgba(128, 222, 234, 0.35)

h3
  font-size: 1.5em
  color: #80deea  // 更亮的蓝色
  text-shadow: 0 0 5px rgba(128, 222, 234, 0.6), 0 0 10px rgba(128, 222, 234, 0.25)

// 链接样式
a
  color: #80deea  // 更亮的蓝色
  text-decoration: none
  transition: all 0.3s ease
  border-bottom: 1px solid transparent
  text-shadow: 0 0 2px rgba(128, 222, 234, 0.3)  // 轻微文字阴影提高对比度

a:hover
  color: #e0f7fa  // 更亮的白色
  border-bottom: 1px solid #80deea
  text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
  background: rgba(79, 195, 247, 0.1)  // 添加悬停背景提高可读性
  padding: 2px 4px  // 添加内边距避免文字变形
  border-radius: 3px

// 卡片和区块样式
.post-block, .sidebar, .header, .footer, .card
  background: rgba(20, 40, 60, 0.95)
  border: 1px solid rgba(128, 222, 234, 0.6)  // 使用更亮的颜色
  box-shadow: 
    0 0 25px rgba(128, 222, 234, 0.25),  // 更亮的发光效果
    inset 0 0 15px rgba(128, 222, 234, 0.2)  // 内部发光更明显
  border-radius: 8px
  padding: 25px  // 增加内边距改善阅读空间
  backdrop-filter: none  // 移除模糊效果提高清晰度
  position: relative

// 添加科技感边框修饰
.post-block::before, .sidebar::before, .header::before, .footer::before, .card::before
  content: ''
  position: absolute
  top: -2px
  left: -2px
  right: -2px
  bottom: -2px
  border-radius: 10px
  z-index: -1
  border: 1px solid transparent
  background: linear-gradient(45deg, rgba(128, 222, 234, 0.1), rgba(128, 222, 234, 0.3), rgba(128, 222, 234, 0.1), rgba(128, 222, 234, 0.3))
  background-origin: border-box
  background-clip: content-box, border-box
  animation: borderAnimation 3s linear infinite

@keyframes borderAnimation
  0%
    filter: hue-rotate(0deg)
  100%
    filter: hue-rotate(360deg)

// 添加内部发光效果
.post-block::after, .sidebar::after, .header::after, .footer::after, .card::after
  content: ''
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  border-radius: 8px
  box-shadow: 
    inset 0 0 15px rgba(128, 222, 234, 0.15),
    inset 0 0 30px rgba(128, 222, 234, 0.1)
  z-index: -1

// 导航菜单
.main-menu
  background: rgba(20, 40, 60, 0.95)
  border: 1px solid rgba(79, 195, 247, 0.5)
  box-shadow: 0 0 20px rgba(79, 195, 247, 0.2)
  border-radius: 8px
  padding: 10px

.menu-item a
  color: #e8f4fd  // 更亮的文字颜色
  padding: 12px 20px
  border-radius: 6px
  transition: all 0.3s ease
  border: 1px solid transparent
  text-shadow: none  // 移除文字阴影提高清晰度
  font-family: 'Segoe UI', sans-serif

.menu-item a:hover
  color: #e0f7fa  // 更亮的悬停颜色
  background: rgba(79, 195, 247, 0.2)
  border: 1px solid rgba(79, 195, 247, 0.3)
  text-shadow: none  // 移除文字阴影提高清晰度
  box-shadow: 0 0 15px rgba(79, 195, 247, 0.3)

// 输入框样式
input[type="text"], input[type="search"], textarea
  background: rgba(10, 26, 42, 0.5)
  border: 1px solid rgba(79, 195, 247, 0.3)
  color: $text-color
  padding: 10px 15px
  border-radius: 4px
  font-family: 'Segoe UI', sans-serif

input[type="text"]:focus, input[type="search"]:focus, textarea:focus
  outline: none
  border: 1px solid $primary-color
  box-shadow: 0 0 10px rgba(79, 195, 247, 0.5)

// 滚动条样式
::-webkit-scrollbar
  width: 10px

::-webkit-scrollbar-track
  background: rgba(10, 26, 42, 0.3)

::-webkit-scrollbar-thumb
  background: linear-gradient(to bottom, $primary-color, $accent-color)
  border-radius: 5px

// 文本选择样式
::selection
  background: rgba(79, 195, 247, 0.3)
  color: #ffffff

::-moz-selection
  background: rgba(79, 195, 247, 0.3)
  color: #ffffff

// 分页导航
.pagination .page-number, 
.pagination .prev, 
.pagination .next
  background: rgba(10, 26, 42, 0.5)
  border: 1px solid rgba(79, 195, 247, 0.3)
  color: $text-color
  padding: 8px 15px
  border-radius: 4px

.pagination .page-number:hover, 
.pagination .prev:hover, 
.pagination .next:hover
  background: rgba(79, 195, 247, 0.2)
  border: 1px solid $primary-color
  color: #ffffff

// 标签样式
.tag
  background: rgba(79, 195, 247, 0.1)
  border: 1px solid rgba(79, 195, 247, 0.3)
  color: $primary-color
  padding: 4px 10px
  border-radius: 20px

.tag:hover
  background: rgba(79, 195, 247, 0.3)
  box-shadow: 0 0 10px rgba(79, 195, 247, 0.5)

// 代码块样式
.codeblock
  background: rgba(0, 0, 0, 0.3)
  border: 1px solid rgba(79, 195, 247, 0.3)
  border-radius: 6px

// 引用块样式
blockquote
  border-left: 3px solid $primary-color
  background: rgba(79, 195, 247, 0.05)
  padding: 15px 20px
  margin: 20px 0
  border-radius: 0 4px 4px 0
  color: #bbdefb

// 文章内容区域
.post-body
  color: #e8f4fd  // 更亮的文字
  line-height: 1.8
  font-size: 16px  // 确保合适的字体大小
  letter-spacing: 0.5px  // 增加字母间距提高可读性
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased

// 文章标题样式
.post-title
  font-family: 'Orbitron', 'Segoe UI', sans-serif
  color: #80deea  // 亮蓝色
  text-shadow: 0 0 3px rgba(128, 222, 234, 0.5), 0 0 8px rgba(128, 222, 234, 0.3)
  font-weight: 500
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  transition: all 0.3s ease

.post-title-link
  color: #80deea  // 亮蓝色
  text-decoration: none
  transition: all 0.3s ease
  border-bottom: 1px solid transparent
  display: block
  padding: 5px 0

.post-title-link:hover
  color: #e0f7fa  // 更亮的悬停颜色
  border-bottom: 1px solid #80deea
  text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
  background: rgba(79, 195, 247, 0.1)
  padding: 5px 8px
  border-radius: 3px

// 搜索弹窗样式
.search-pop-overlay {
  background: rgba(10, 26, 42, 0.95)  // 深色半透明背景
  backdrop-filter: none  // 移除模糊提高清晰度
}

.popup {
  background: rgba(20, 40, 60, 0.97)  // 深蓝背景
  border: 1px solid rgba(128, 222, 234, 0.6)  // 科技蓝边框
  box-shadow: 0 0 30px rgba(128, 222, 234, 0.4), 0 0 10px rgba(128, 222, 234, 0.2) inset  // 发光效果
  border-radius: 8px
  color: #e8f4fd  // 清晰文字颜色
  font-family: 'Segoe UI', 'Orbitron', sans-serif  // 科技字体

  .search-header {
    border-bottom: 1px solid rgba(128, 222, 234, 0.4)
    
    .search-input-container {
      input {
        background: rgba(10, 26, 42, 0.7)
        border: 1px solid rgba(128, 222, 234, 0.5)
        color: #e8f4fd
        padding: 12px 15px
        border-radius: 6px
        font-family: 'Segoe UI', sans-serif
        
        &:focus {
          border: 1px solid #80deea
          box-shadow: 0 0 15px rgba(128, 222, 234, 0.5)
        }
      }
    }
    
    .popup-btn-close {
      color: #80deea
      transition: all 0.3s ease
      
      &:hover {
        color: #e0f7fa
        text-shadow: 0 0 10px rgba(128, 222, 234, 0.7)
      }
    }
  }
  
  .search-result-container {
    .search-result {
      border-bottom: 1px solid rgba(128, 222, 234, 0.2)
      
      .search-result-title {
        color: #80deea
        transition: all 0.3s ease
        
        &:hover {
          color: #e0f7fa
          text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
          padding-left: 5px
        }
      }
      
      .search-result-item {
        border-left: 2px solid rgba(128, 222, 234, 0.3)
        
        &:hover {
          border-left: 2px solid #80deea
          background: rgba(128, 222, 234, 0.1)
        }
      }
    }
    
    .search-result-icon {
      color: #80deea
      text-align: center
      font-size: 24px
    }
  }
}

// 侧边栏整体样式
.sidebar {
  background: rgba(20, 40, 60, 0.95)
  border: 1px solid rgba(128, 222, 234, 0.5)
  box-shadow: 
    0 0 25px rgba(128, 222, 234, 0.3),
    inset 0 0 15px rgba(128, 222, 234, 0.2)
  border-radius: 8px
  color: #e8f4fd
  padding: 20px
  backdrop-filter: none  // 移除模糊提高清晰度

  // 侧边栏标题
  .sidebar-title {
    color: #80deea
    border-bottom: 1px solid rgba(128, 222, 234, 0.4)
    text-shadow: 0 0 5px rgba(128, 222, 234, 0.4)
    font-family: 'Orbitron', 'Segoe UI', sans-serif
    margin-bottom: 15px
    padding-bottom: 10px
  }
  
  // 侧边栏菜单项
  .sidebar-nav {
    margin: 0
    padding: 0
    
    & > li {
      border-left: 2px solid transparent
      transition: all 0.3s ease
      
      &:hover {
        border-left: 2px solid #80deea
        background: rgba(128, 222, 234, 0.1)
        transform: translateX(5px)
