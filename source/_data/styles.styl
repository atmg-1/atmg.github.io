// 添加随机闪烁效果
body {
  animation: flicker 8s infinite, hologram 20s ease-in-out infinite !important;
  position: relative !important;
  transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) !important;
  
