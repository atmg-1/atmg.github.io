// 打字机效果和加载屏幕样式
.loading-screen
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: #0a1a2a
  z-index: 9999
  display: flex
  align-items: center
  justify-content: center
  overflow: hidden

.typewriter-container
  width: 80%
  max-width: 700px
  padding: 30px
  display: flex
  flex-direction: column
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
  color: #e0f7fa
  overflow: hidden
  position: relative

.typewriter-content
  width: 100%
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center

.typewriter-header
  display: flex
  align-items: center
  justify-content: center

.typewriter-text
  color: #e0f7fa
  display: inline-block
  font-size: 2.5em
  font-weight: 300
  letter-spacing: 2px

.cursor
  display: inline-block
  width: 4px
  height: 1.2em
  background: #e0f7fa
  margin-left: 8px
  animation: blink 1s infinite
  vertical-align: middle

@keyframes blink
  0%, 100%
    opacity: 1
  50%
    opacity: 0

// 防止页面在加载时滚动
body.loading
  overflow: hidden