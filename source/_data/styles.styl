h2
  font-size: 1.8em
  color: #80deea  // 更亮的蓝色
  text-shadow: 0 0 5px rgba(128, 222, 234, 0.7), 0 0 12px rgba(128, 222, 234, 0.35)

h3
  font-size: 1.5em
  color: #80deea  // 更亮的蓝色
  text-shadow: 0 0 5px rgba(128, 222, 234, 0.6), 0 0 10px rgba(128, 222, 234, 0.25)

// 链接样式
a
  color: #80deea  // 更亮的蓝色
  text-decoration: none
  transition: all 0.3s ease
  border-bottom: 1px solid transparent
  text-shadow: 0 0 2px rgba(128, 222, 234, 0.3)  // 轻微文字阴影提高对比度

a:hover
  color: #e0f7fa  // 更亮的白色
  border-bottom: 1px solid #80deea
  text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
  background: rgba(79, 195, 247, 0.1)  // 添加悬停背景提高可读性
  padding: 2px 4px  // 添加内边距避免文字变形
  border-radius: 3px

// 卡片和区块样式
.post-block, .sidebar, .header, .footer, .card
  background: rgba(20, 40, 60, 0.95)
  border: 1px solid rgba(128, 222, 234, 0.6)  // 使用更亮的颜色
  box-shadow: 
    0 0 25px rgba(128, 222, 234, 0.25),  // 更亮的发光效果
    inset 0 0 15px rgba(128, 222, 234, 0.2)  // 内部发光更明显
  border-radius: 8px
  padding: 25px  // 增加内边距改善阅读空间
  backdrop-filter: none  // 移除模糊效果提高清晰度
  position: relative

// 添加科技感边框修饰
.post-block::before, .sidebar::before, .header::before, .footer::before, .card::before
  content: ''
  position: absolute
  top: -2px
  left: -2px
  right: -2px
  bottom: -2px
  border-radius: 10px
  z-index: -1
  border: 1px solid transparent
  background: linear-gradient(45deg, rgba(128, 222, 234, 0.1), rgba(128, 222, 234, 0.3), rgba(128, 222, 234, 0.1), rgba(128, 222, 234, 0.3))
  background-origin: border-box
  background-clip: content-box, border-box
  animation: borderAnimation 3s linear infinite

@keyframes borderAnimation
  0%
    filter: hue-rotate(0deg)
  100%
    filter: hue-rotate(360deg)

// 添加内部发光效果
.post-block::after, .sidebar::after, .header::after, .footer::after, .card::after
  content: ''
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  border-radius: 8px
  box-shadow: 
    inset 0 0 15px rgba(128, 222, 234, 0.15),
    inset 0 0 30px rgba(128, 222, 234, 0.1)
  z-index: -1

// 导航菜单
.main-menu
  background: rgba(20, 40, 60, 0.95)
  border: 1px solid rgba(79, 195, 247, 0.5)
  box-shadow: 0 0 20px rgba(79, 195, 247, 0.2)
  border-radius: 8px
  padding: 10px

.menu-item a
  color: #e8f4fd  // 更亮的文字颜色
  padding: 12px 20px
  border-radius: 6px
  transition: all 0.3s ease
  border: 1px solid transparent
  text-shadow: none  // 移除文字阴影提高清晰度
  font-family: 'Segoe UI', sans-serif

.menu-item a:hover
  color: #e0f7fa  // 更亮的悬停颜色
  background: rgba(79, 195, 247, 0.2)
  border: 1px solid rgba(79, 195, 247, 0.3)
  text-shadow: none  // 移除文字阴影提高清晰度
  box-shadow: 0 0 15px rgba(79, 195, 247, 0.3)

// 输入框样式
input[type="text"], input[type="search"], textarea
  background: rgba(10, 26, 42, 0.5)
  border: 1px solid rgba(79, 195, 247, 0.3)
  color: $text-color
  padding: 10px 15px
  border-radius: 4px
  font-family: 'Segoe UI', sans-serif

input[type="text"]:focus, input[type="search"]:focus, textarea:focus
  outline: none
  border: 1px solid $primary-color
  box-shadow: 0 0 10px rgba(79, 195, 247, 0.5)

// 滚动条样式
::-webkit-scrollbar
  width: 10px

::-webkit-scrollbar-track
  background: rgba(10, 26, 42, 0.3)

::-webkit-scrollbar-thumb
  background: linear-gradient(to bottom, $primary-color, $accent-color)
  border-radius: 5px

// 文本选择样式
::selection
  background: rgba(79, 195, 247, 0.3)
  color: #ffffff

::-moz-selection
  background: rgba(79, 195, 247, 0.3)
  color: #ffffff

// 分页导航
.pagination .page-number, 
.pagination .prev, 
.pagination .next
  background: rgba(10, 26, 42, 0.5)
  border: 1px solid rgba(79, 195, 247, 0.3)
  color: $text-color
  padding: 8px 15px
  border-radius: 4px

.pagination .page-number:hover, 
.pagination .prev:hover, 
.pagination .next:hover
  background: rgba(79, 195, 247, 0.2)
  border: 1px solid $primary-color
  color: #ffffff

// 标签样式
.tag
  background: rgba(79, 195, 247, 0.1)
  border: 1px solid rgba(79, 195, 247, 0.3)
  color: $primary-color
  padding: 4px 10px
  border-radius: 20px

.tag:hover
  background: rgba(79, 195, 247, 0.3)
  box-shadow: 0 0 10px rgba(79, 195, 247, 0.5)

// 代码块样式
.codeblock
  background: rgba(0, 0, 0, 0.3)
  border: 1px solid rgba(79, 195, 247, 0.3)
  border-radius: 6px

// 引用块样式
blockquote
  border-left: 3px solid $primary-color
  background: rgba(79, 195, 247, 0.05)
  padding: 15px 20px
  margin: 20px 0
  border-radius: 0 4px 4px 0
  color: #bbdefb

// 文章内容区域
.post-body
  color: #e8f4fd  // 更亮的文字
  line-height: 1.8
  font-size: 16px  // 确保合适的字体大小
  letter-spacing: 0.5px  // 增加字母间距提高可读性
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased

// 文章标题样式
.post-title
  font-family: 'Orbitron', 'Segoe UI', sans-serif
  color: #80deea  // 亮蓝色
  text-shadow: 0 0 3px rgba(128, 222, 234, 0.5), 0 0 8px rgba(128, 222, 234, 0.3)
  font-weight: 500
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  transition: all 0.3s ease

.post-title-link
  color: #80deea  // 亮蓝色
  text-decoration: none
  transition: all 0.3s ease
  border-bottom: 1px solid transparent
  display: block
  padding: 5px 0

.post-title-link:hover
  color: #e0f7fa  // 更亮的悬停颜色
  border-bottom: 1px solid #80deea
  text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
  background: rgba(79, 195, 247, 0.1)
  padding: 5px 8px
  border-radius: 3px

// 搜索弹窗样式
.search-pop-overlay {
  background: rgba(10, 26, 42, 0.95)  // 深色半透明背景
  backdrop-filter: none  // 移除模糊提高清晰度
}

.popup {
  background: rgba(20, 40, 60, 0.97)  // 深蓝背景
  border: 1px solid rgba(128, 222, 234, 0.6)  // 科技蓝边框
  box-shadow: 0 0 30px rgba(128, 222, 234, 0.4), 0 0 10px rgba(128, 222, 234, 0.2) inset  // 发光效果
  border-radius: 8px
  color: #e8f4fd  // 清晰文字颜色
  font-family: 'Segoe UI', 'Orbitron', sans-serif  // 科技字体

  .search-header {
    border-bottom: 1px solid rgba(128, 222, 234, 0.4)
    
    .search-input-container {
      input {
        background: rgba(10, 26, 42, 0.7)
        border: 1px solid rgba(128, 222, 234, 0.5)
        color: #e8f4fd
        padding: 12px 15px
        border-radius: 6px
        font-family: 'Segoe UI', sans-serif
        
        &:focus {
          border: 1px solid #80deea
          box-shadow: 0 0 15px rgba(128, 222, 234, 0.5)
        }
      }
    }
    
    .popup-btn-close {
      color: #80deea
      transition: all 0.3s ease
      
      &:hover {
        color: #e0f7fa
        text-shadow: 0 0 10px rgba(128, 222, 234, 0.7)
      }
    }
  }
  
  .search-result-container {
    .search-result {
      border-bottom: 1px solid rgba(128, 222, 234, 0.2)
      
      .search-result-title {
        color: #80deea
        transition: all 0.3s ease
        
        &:hover {
          color: #e0f7fa
          text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
          padding-left: 5px
        }
      }
      
      .search-result-item {
        border-left: 2px solid rgba(128, 222, 234, 0.3)
        
        &:hover {
          border-left: 2px solid #80deea
          background: rgba(128, 222, 234, 0.1)
        }
      }
    }
    
    .search-result-icon {
      color: #80deea
      text-align: center
      font-size: 24px
    }
  }
}

// 侧边栏整体样式
.sidebar {
  background: rgba(20, 40, 60, 0.95)
  border: 1px solid rgba(128, 222, 234, 0.5)
  box-shadow: 
    0 0 25px rgba(128, 222, 234, 0.3),
    inset 0 0 15px rgba(128, 222, 234, 0.2)
  border-radius: 8px
  color: #e8f4fd
  padding: 20px
  backdrop-filter: none  // 移除模糊提高清晰度

  // 侧边栏标题
  .sidebar-title {
    color: #80deea
    border-bottom: 1px solid rgba(128, 222, 234, 0.4)
    text-shadow: 0 0 5px rgba(128, 222, 234, 0.4)
    font-family: 'Orbitron', 'Segoe UI', sans-serif
    margin-bottom: 15px
    padding-bottom: 10px
  }
  
  // 侧边栏菜单项
  .sidebar-nav {
    margin: 0
    padding: 0
    
    & > li {
      border-left: 2px solid transparent
      transition: all 0.3s ease
      
      &:hover {
        border-left: 2px solid #80deea
        background: rgba(128, 222, 234, 0.1)
        transform: translateX(5px)
      }
      
      &.active {
        border-left: 2px solid #80deea
        background: rgba(128, 222, 234, 0.15)
      }
      
      a {
        color: #e8f4fd
        padding: 8px 15px
        display: block
        transition: all 0.3s ease
        border-radius: 4px
        
        &:hover {
          color: #e0f7fa
          background: rgba(128, 222, 234, 0.2)
          text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
        }
        
        &.active {
          color: #e0f7fa
          background: rgba(128, 222, 234, 0.25)
          border-left: 2px solid #80deea
        }
      }
    }
  }
  
  // 侧边栏面板容器
  .sidebar-panel-container {
    background: rgba(20, 40, 60, 0.95)
    border: 1px solid rgba(128, 222, 234, 0.5)
    box-shadow: 0 0 25px rgba(128, 222, 234, 0.3)
    border-radius: 8px
    padding: 15px
    
    // 侧边栏概览
    .site-overview {
      .site-author {
        .site-author-name {
          color: #80deea
          text-shadow: 0 0 5px rgba(128, 222, 234, 0.4)
          margin-bottom: 10px
        }
        
        .site-description {
          color: #bbdefb
          font-size: 14px
        }
      }
      
      .site-state {
        border-top: 1px solid rgba(128, 222, 234, 0.3)
        
        .site-state-item {
          a {
            border-bottom: none
            
            .site-state-item-name {
              color: #bbdefb
            }
            
            .site-state-item-value {
              color: #80deea
              text-shadow: 0 0 5px rgba(128, 222, 234, 0.4)
            }
          }
        }
      }
    }
    
    // 侧边栏文章目录
    .post-toc {
      .post-toc-title {
        color: #80deea
        text-shadow: 0 0 5px rgba(128, 222, 234, 0.4)
        border-bottom: 1px solid rgba(128, 222, 234, 0.3)
        padding-bottom: 8px
        margin-bottom: 10px
      }
      
      .post-toc ol {
        padding-left: 15px
        
        > li {
          margin: 8px 0
          
          > ol {
            padding-left: 12px
            
            > li {
              margin: 6px 0
              
              a {
                color: #bbdefb
                transition: all 0.3s ease
                
                &:hover {
                  color: #e0f7fa
                  text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
                }
              }
            }
          }
          
          > a {
            color: #80deea
            transition: all 0.3s ease
            display: block
            padding: 3px 5px
            border-radius: 3px
            
            &:hover {
              color: #e0f7fa
              background: rgba(128, 222, 234, 0.15)
              text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
            }
            
            &.active {
              color: #e0f7fa
              background: rgba(128, 222, 234, 0.25)
              border-left: 2px solid #80deea
            }
          }
        }
      }
    }
  }
}

// 侧边栏开关按钮
.sidebar-toggle {
  background: rgba(128, 222, 234, 0.2)
  border: 1px solid rgba(128, 222, 234, 0.5)
  border-radius: 5px
  transition: all 0.3s ease
  
  &:hover {
    background: rgba(128, 222, 234, 0.3)
    box-shadow: 0 0 15px rgba(128, 222, 234, 0.5)
  }
  
  .toggle-line {
    background: #80deea
  }
}

// 侧边栏遮罩
.sidebar-dimmer {
  background: rgba(10, 26, 42, 0.8)
  opacity: 1
  visibility: visible
  transition: all 0.4s ease
  z-index: 1000
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  pointer-events: auto
  
  &.hidden {
    opacity: 0
    visibility: hidden
    pointer-events: none
  }
}

// 完全隐藏侧边栏
.sidebar {
  transition: all 0.4s ease
  z-index: 1001
  
  &.hidden {
    transform: translateX(-100%)
    opacity: 0
    pointer-events: none
  }
}

// 社交链接样式
.sidebar-social {
  margin-top: 20px
  padding-top: 15px
  border-top: 1px solid rgba(128, 222, 234, 0.3)
  
  .social-item {
    display: inline-block
    margin: 0 8px
    width: 36px
    height: 36px
    line-height: 36px
    text-align: center
    border-radius: 50%
    background: rgba(128, 222, 234, 0.1)
    border: 1px solid rgba(128, 222, 234, 0.3)
    color: #80deea
    transition: all 0.3s ease
    
    &:hover {
      background: rgba(128, 222, 234, 0.3)
      color: #e0f7fa
      border: 1px solid rgba(128, 222, 234, 0.6)
      text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
      transform: scale(1.1)
    }
  }
}

// 侧边栏标签云
.sidebar-tags {
  margin-top: 20px
  padding-top: 15px
  border-top: 1px solid rgba(128, 222, 234, 0.3)
  
  .sidebar-tag-item {
    display: inline-block
    margin: 4px 3px
    padding: 3px 10px
    background: rgba(128, 222, 234, 0.1)
    border: 1px solid rgba(128, 222, 234, 0.2)
    border-radius: 12px
    color: #bbdefb
    font-size: 12px
    transition: all 0.3s ease
    
    &:hover {
      background: rgba(128, 222, 234, 0.3)
      color: #e0f7fa
      border: 1px solid rgba(128, 222, 234, 0.5)
      text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
    }
  }
}

// 侧边栏归档
.sidebar-archives {
  margin-top: 20px
  padding-top: 15px
  border-top: 1px solid rgba(128, 222, 234, 0.3)
  
  .archive-item {
    padding: 5px 0
    border-left: 2px solid transparent
    transition: all 0.3s ease
    
    &:hover {
      border-left: 2px solid #80deea
      background: rgba(128, 222, 234, 0.1)
      padding-left: 8px
    }
    
    .archive-link {
      color: #bbdefb
      transition: all 0.3s ease
      
      &:hover {
        color: #e0f7fa
        text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
      }
    }
    
    .archive-count {
      float: right
      color: #80deea
      font-size: 12px
    }
  }
}

// 侧边栏分类
.sidebar-categories {
  margin-top: 20px
  padding-top: 15px
  border-top: 1px solid rgba(128, 222, 234, 0.3)
  
  .category-item {
    padding: 5px 0
    border-left: 2px solid transparent
    transition: all 0.3s ease
    
    &:hover {
      border-left: 2px solid #80deea
      background: rgba(128, 222, 234, 0.1)
      padding-left: 8px
    }
    
    .category-link {
      color: #bbdefb
      transition: all 0.3s ease
      
      &:hover {
        color: #e0f7fa
        text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
      }
    }
    
    .category-count {
      float: right
      color: #80deea
      font-size: 12px
    }
  }
}

// 侧边栏最近文章
.sidebar-recent-posts {
  margin-top: 20px
  padding-top: 15px
  border-top: 1px solid rgba(128, 222, 234, 0.3)
  
  .recent-post-item {
    padding: 8px 0
    border-bottom: 1px solid rgba(128, 222, 234, 0.1)
    
    &:last-child {
      border-bottom: none
    }
    
    .recent-post-title {
      color: #80deea
      font-size: 14px
      transition: all 0.3s ease
      
      &:hover {
        color: #e0f7fa
        text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)
        padding-left: 5px
      }
    }
    
    .recent-post-date {
      color: #bbdefb
      font-size: 12px
      margin-top: 3px
    }
  }
}

// 侧边栏搜索框
.sidebar-search {
  margin-top: 20px
  padding: 15px
  background: rgba(10, 26, 42, 0.3)
  border: 1px solid rgba(128, 222, 234, 0.2)
  border-radius: 6px
  
  .search-input {
    width: 100%
    padding: 8px 12px
    background: rgba(10, 26, 42, 0.5)
    border: 1px solid rgba(128, 222, 234, 0.3)
    border-radius: 4px
    color: #e8f4fd
    font-family: 'Segoe UI', sans-serif
    transition: all 0.3s ease
    
    &:focus {
      outline: none
      border: 1px solid #80deea
      box-shadow: 0 0 10px rgba(128, 222, 234, 0.4)
    }
  }
}

// 提示框样式
.note
  border-radius: 6px
  padding: 15px
  margin: 20px 0
  border-left: 4px solid

.note.default
  background: rgba(79, 195, 247, 0.1)
  border-color: $primary-color
  color: $text-color

.note.primary
  background: rgba(126, 87, 194, 0.1)
  border-color: #7e57c2
  color: #d1c4e9

.note.info
  background: rgba(33, 150, 243, 0.1)
  border-color: $accent-color
  color: #bbdefb

.note.success
  background: rgba(76, 175, 80, 0.1)
  border-color: #81c784
  color: #c8e6c9

.note.warning
  background: rgba(255, 152, 0, 0.1)
  border-color: #ffb74d
  color: #ffe0b2

.note.danger
  background: rgba(244, 67, 54, 0.1)
  border-color: #e57373
  color: #ffcdd2

// 打字机效果和加载屏幕样式
.loading-screen
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: #0a1a2a
  z-index: 9999
  display: flex
  align-items: center
  justify-content: center
  overflow: hidden

.typewriter-container
  width: 80%
  max-width: 700px
  padding: 30px
  display: flex
  flex-direction: column
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
  color: #e0f7fa
  overflow: hidden
  position: relative

.typewriter-content
  width: 100%
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center

.typewriter-header
  display: flex
  align-items: center
  justify-content: center

.typewriter-text
  color: #e0f7fa
  display: inline-block
  font-size: 2.5em
  font-weight: 300
  letter-spacing: 2px

.cursor
  display: inline-block
  width: 4px
  height: 1.2em
  background: #e0f7fa
  margin-left: 8px
  animation: blink 1s infinite
  vertical-align: middle

@keyframes blink
  0%, 100%
    opacity: 1
  50%
    opacity: 0

// 防止页面在加载时滚动
body.loading
  overflow: hidden