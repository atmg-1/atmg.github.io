// 流浪地球风格 - 未来科幻感设计
// 完全重新设计，确保无闪烁、无问题效果

// 主要背景色 - 深邃太空
$body-bg = #0a1a2a
$text-color = #e0f0ff
$primary-color = #4fc3f7
$accent-color = #29b6f6

// 全局背景
body
  background: $body-bg
  color: #e8f4fd  // 更亮的文字颜色
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
  font-weight: 300
  line-height: 1.7
  min-height: 100vh
  position: relative
  overflow-x: hidden

// 星空背景效果 - 使用伪元素创建
body::before
  content: ''
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: $body-bg
  z-index: -1000
  pointer-events: none

// 星星点点效果
body::after
  content: ''
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-image: 
    radial-gradient(1.5px 1.5px at 50px 50px, #81d4fa, transparent),
    radial-gradient(1px 1px at 100px 150px, #e0f0ff, transparent),
    radial-gradient(1px 1px at 200px 80px, #4fc3f7, transparent),
    radial-gradient(1px 1px at 250px 200px, #81d4fa, transparent),
    radial-gradient(1px 1px at 300px 100px, #e0f0ff, transparent),
    radial-gradient(1px 1px at 400px 180px, #4fc3f7, transparent),
    radial-gradient(1px 1px at 500px 60px, #81d4fa, transparent),
    radial-gradient(1px 1px at 600px 220px, #e0f0ff, transparent),
    radial-gradient(1px 1px at 700px 120px, #4fc3f7, transparent),
    radial-gradient(1px 1px at 50px 250px, #81d4fa, transparent),
    radial-gradient(1px 1px at 150px 300px, #e0f0ff, transparent),
    radial-gradient(1px 1px at 350px 350px, #4fc3f7, transparent)
  background-repeat: repeat
  background-size: 300px 300px
  z-index: -999
  pointer-events: none

// 添加科技网格背景
body::before
  content: ''
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-image: 
    linear-gradient(rgba(128, 222, 234, 0.05) 1px, transparent 1px),
    linear-gradient(90deg, rgba(128, 222, 234, 0.05) 1px, transparent 1px)
  background-size: 40px 40px
  z-index: -998
  pointer-events: none

// 添加动态能量场效果
body::after
  content: ''
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: radial-gradient(
    circle at center,
    transparent 0%,
    rgba(128, 222, 234, 0.05) 70%,
    rgba(128, 222, 234, 0.1) 100%
  )
  z-index: -997
  pointer-events: none
  animation: energy-field 20s infinite alternate

// 添加能量场动画
@keyframes energy-field
  0%
    transform: scale(1)
    opacity: 0.3
  100%
    transform: scale(1.05)
    opacity: 0.5

// 添加扫描线效果
.scan-line
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 8px
  background: linear-gradient(
    to bottom,
    rgba(128, 222, 234, 0) 0%,
    rgba(128, 222, 234, 0.3) 50%,
    rgba(128, 222, 234, 0) 100%
  )
  z-index: -996
  animation: scan 8s linear infinite
  pointer-events: none

@keyframes scan
  0%
    top: 0
    opacity: 0
  10%
    opacity: 0.5
  50%
    opacity: 1
  90%
    opacity: 0.5
  100%
    top: 100%
    opacity: 0

// 添加电路板纹理
.circuit-pattern
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-image: 
    linear-gradient(rgba(128, 222, 234, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(128, 222, 234, 0.03) 1px, transparent 1px),
    radial-gradient(circle at 10% 20%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 20% 40%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 30% 60%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 40% 80%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 60% 10%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 70% 30%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 80% 50%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px),
    radial-gradient(circle at 90% 70%, rgba(128, 222, 234, 0.05) 0.1px, transparent 0.1px)
  background-size: 
    60px 60px,
    60px 60px,
    100px 100px,
    100px 100px,
    100px 100px,
    100px 100px,
    100px 100px,
    100px 100px,
    100px 100px,
    100px 100px
  z-index: -995
  pointer-events: none
  animation: circuit-pulse 15s infinite alternate

// 添加高级霓虹光效
.neon-glow
  position: relative
  &::before
    content: ''
    position: absolute
    top: -5px
    left: -5px
    right: -5px
    bottom: -5px
    border: 2px solid rgba(128, 222, 234, 0.6)
    border-radius: inherit
    filter: blur(10px)
    z-index: -1
    animation: neon-pulse 3s infinite alternate

@keyframes neon-pulse
  0%
    opacity: 0.3
    box-shadow: 0 0 10px rgba(128, 222, 234, 0.3)
  100%
    opacity: 0.8
    box-shadow: 0 0 20px rgba(128, 222, 234, 0.6)

// 添加全息投影效果
.hologram-effect
  position: relative
  overflow: hidden
  &::after
    content: ''
    position: absolute
    top: -50%
    left: -60%
    width: 20px
    height: 200%
    background: rgba(255, 255, 255, 0.3)
    transform: rotate(25deg)
    transition: all 0.6s

.hologram-effect:hover::after
  left: 120%
  transition: left 0.6s

// 添加高级卡片样式
.post-block, .sidebar, .header, .footer, .card
  background: rgba(20, 40, 60, 0.95)
  border: 1px solid rgba(128, 222, 234, 0.6)  // 使用更亮的颜色
  box-shadow: 
    0 0 25px rgba(128, 222, 234, 0.25),  // 更亮的发光效果
    inset 0 0 15px rgba(128, 222, 234, 0.2),  // 内部发光更明显
    0 0 40px rgba(128, 222, 234, 0.1)  // 外围发光
  border-radius: 8px
  padding: 25px  // 增加内边距改善阅读空间
  backdrop-filter: none  // 移除模糊效果提高清晰度
  position: relative
  overflow: hidden
  transition: all 0.3s ease

.post-block:hover, .sidebar:hover, .header:hover, .footer:hover, .card:hover
  box-shadow: 
    0 0 35px rgba(128, 222, 234, 0.4),
    inset 0 0 20px rgba(128, 222, 234, 0.3),
    0 0 50px rgba(128, 222, 234, 0.2)
  transform: translateY(-3px)

// 添加浮动粒子效果
.floating-particles
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  pointer-events: none
  z-index: -1

.particle
  position: absolute
  border-radius: 50%
  background: rgba(128, 222, 234, 0.6)
  animation: float 15s infinite linear

@keyframes float
  0%
    transform: translateY(0) rotate(0deg)
    opacity: 0
  10%
    opacity: 1
  90%
    opacity: 1
  100%
    transform: translateY(-100vh) rotate(360deg)
    opacity: 0

// 添加科技按钮样式
.button-tech
  background: linear-gradient(45deg, rgba(128, 222, 234, 0.1), rgba(128, 222, 234, 0.3))
  border: 1px solid rgba(128, 222, 234, 0.5)
  color: #80deea
  padding: 12px 24px
  border-radius: 6px
  cursor: pointer
  transition: all 0.3s ease
  position: relative
  overflow: hidden
  font-family: 'Orbitron', 'Segoe UI', sans-serif

.button-tech:hover
  background: linear-gradient(45deg, rgba(128, 222, 234, 0.3), rgba(128, 222, 234, 0.5))
  box-shadow: 0 0 15px rgba(128, 222, 234, 0.5)
  color: #e0f7fa
  transform: translateY(-2px)

// 添加数据流效果
.data-stream-bar
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 4px
  background: linear-gradient(90deg, transparent, rgba(128, 222, 234, 0.8), transparent)
  animation: data-flow 2s linear infinite
  z-index: 9999
  pointer-events: none

@keyframes data-flow
  0%
    transform: translateX(-100%)
  100%
    transform: translateX(100%)

// 添加高级文字效果
.advanced-text-glow
  position: relative
  color: #e8f4fd
  text-shadow: 
    0 0 5px rgba(128, 222, 234, 0.5),
    0 0 10px rgba(128, 222, 234, 0.3),
    0 0 15px rgba(128, 222, 234, 0.2)

// 添加脉冲效果
.pulse-element
  animation: pulse-animation 2s infinite

@keyframes pulse-animation
  0%
    box-shadow: 0 0 0 0 rgba(128, 222, 234, 0.7)
  70%
    box-shadow: 0 0 0 15px rgba(128, 222, 234, 0)
  100%
    box-shadow: 0 0 0 0 rgba(128, 222, 234, 0)

// 添加高级导航样式
.nav-tech
  background: rgba(20, 40, 60, 0.8)
  backdrop-filter: none
  border-bottom: 1px solid rgba(128, 222, 234, 0.3)
  padding: 15px 0

.nav-tech .menu-item a
  color: #bbdefb
  padding: 10px 20px
  border-radius: 5px
  transition: all 0.3s ease
  position: relative
  overflow: hidden

.nav-tech .menu-item a::before
  content: ''
  position: absolute
  top: 0
  left: -100%
  width: 100%
  height: 100%
  background: linear-gradient(90deg, transparent, rgba(128, 222, 234, 0.2), transparent)
  transition: left 0.5s

.nav-tech .menu-item a:hover::before
  left: 100%

.nav-tech .menu-item a:hover
  color: #80deea
  background: rgba(128, 222, 234, 0.1)
  text-shadow: 0 0 8px rgba(128, 222, 234, 0.6)

// 页面整体容器
html, body
  background: $body-bg
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
  color: #e8f4fd  // 更亮的文字颜色
  min-height: 100vh
  position: relative
  overflow-x: hidden

// 黑客帝国风格电路背景
.hacker-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1005;
  pointer-events: none;
  
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      linear-gradient(rgba(0, 255, 128, 0.05) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 255, 128, 0.05) 1px, transparent 1px);
    background-size: 40px 40px;
  }
}

// 电路板连线效果
.circuit-lines {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1004;
  pointer-events: none;
  
  &::before,
  &::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    
    // 水平和垂直连线
    background-image: 
      linear-gradient(transparent 49%, rgba(0, 255, 128, 0.2) 50%, transparent 51%),
      linear-gradient(90deg, transparent 49%, rgba(0, 255, 128, 0.2) 50%, transparent 51%);
    background-size: 100px 100px;
  }
  
  &::after {
    // 斜向连线
    background-image: 
      linear-gradient(45deg, transparent 49%, rgba(0, 255, 128, 0.1) 50%, transparent 51%),
      linear-gradient(-45deg, transparent 49%, rgba(0, 255, 128, 0.1) 50%, transparent 51%);
    background-size: 100px 100px;
  }
}

// 数据流效果
.data-flow {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1003;
  pointer-events: none;
  overflow: hidden;
  
  .flow-line {
    position: absolute;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(0, 255, 128, 0.8), rgba(0, 255, 128, 0.5), transparent);
    animation: flow-data 8s linear infinite;
    
    // 随机位置和速度
    &:nth-child(1) { top: 10%; animation-delay: 0s; }
    &:nth-child(2) { top: 20%; animation-delay: 2s; }
    &:nth-child(3) { top: 30%; animation-delay: 4s; }
    &:nth-child(4) { top: 40%; animation-delay: 1s; }
    &:nth-child(5) { top: 50%; animation-delay: 3s; }
    &:nth-child(6) { top: 60%; animation-delay: 5s; }
    &:nth-child(7) { top: 70%; animation-delay: 2s; }
    &:nth-child(8) { top: 80%; animation-delay: 4s; }
    &:nth-child(9) { top: 90%; animation-delay: 6s; }
  }
}

@keyframes flow-data {
  0% {
    left: -100px;
    width: 100px;
  }
  100% {
    left: 100%;
    width: 100px;
  }
}

// 黑客代码雨效果
.matrix-code {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1002;
  pointer-events: none;
  color: rgba(0, 255, 128, 0.05);
  font-size: 14px;
  font-family: monospace;
  letter-spacing: 2px;
  overflow: hidden;
  white-space: nowrap;
}

// 脉冲节点效果
.pulse-nodes {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1001;
  pointer-events: none;
  
  .pulse-node {
    position: absolute;
    width: 8px;
    height: 8px;
    background: rgba(0, 255, 128, 0.6);
    border-radius: 50%;
    animation: pulse-glow 2s infinite;
    
    // 随机分布
    &:nth-child(1) { top: 15%; left: 10%; animation-delay: 0s; }
    &:nth-child(2) { top: 25%; left: 20%; animation-delay: 0.5s; }
    &:nth-child(3) { top: 35%; left: 80%; animation-delay: 1s; }
    &:nth-child(4) { top: 45%; left: 70%; animation-delay: 1.5s; }
    &:nth-child(5) { top: 55%; left: 30%; animation-delay: 0s; }
    &:nth-child(6) { top: 65%; left: 60%; animation-delay: 0.8s; }
    &:nth-child(7) { top: 75%; left: 40%; animation-delay: 1.2s; }
    &:nth-child(8) { top: 85%; left: 90%; animation-delay: 0.3s; }
  }
}

@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 0 5px rgba(0, 255, 128, 0.6);
    transform: scale(1);
  }
  50% {
    box-shadow: 0 0 20px rgba(0, 255, 128, 0.9), 0 0 30px rgba(0, 255, 128, 0.5);
    transform: scale(1.5);
  }
}

// 增强型动态粒子背景
.particle-field {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1002;
  overflow: hidden;
}

.particle {
  position: absolute;
  border-radius: 50%;
  background: rgba(128, 222, 234, 0.3);
  animation: float-particle linear infinite;
}

@keyframes float-particle {
  0% {
    transform: translate(0, 0);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 0.5;
  }
  100% {
    transform: translate(var(--tx), var(--ty));
    opacity: 0;
  }
}

// 数据流效果
.data-stream {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1003;
  overflow: hidden;
  
  .stream-line {
    position: absolute;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(128, 222, 234, 0.6), transparent);
    animation: stream-move 15s linear infinite;
  }
}

@keyframes stream-move {
  0% {
    transform: translateX(-100vw);
  }
  100% {
    transform: translateX(100vw);
  }
}

// 全息投影效果
.holographic-effect {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1004;
  background: 
    radial-gradient(circle at 20% 30%, rgba(128, 222, 234, 0.05) 0%, transparent 20%),
    radial-gradient(circle at 80% 70%, rgba(128, 222, 234, 0.05) 0%, transparent 20%);
  animation: holographic-float 20s ease-in-out infinite;
}

@keyframes holographic-float {
  0%, 100% {
    opacity: 0.3;
    transform: rotate(0deg);
  }
  50% {
    opacity: 0.5;
    transform: rotate(1deg);
  }
}

// 能量场效果
.energy-field {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1005;
  
  &::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(128, 222, 234, 0.1) 0%, transparent 70%);
    animation: energy-pulse 8s ease-in-out infinite;
  }
}

@keyframes energy-pulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.5;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0.2;
  }
}

// 扫描线效果
.scan-line {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1006;
  background: linear-gradient(to bottom, transparent 0%, rgba(128, 222, 234, 0.05) 1%, transparent 2%);
  animation: scan-animation 8s linear infinite;
}

@keyframes scan-animation {
  0% {
    transform: translateY(-100%);
  }
  100% {
    transform: translateY(100%);
  }
}

// 简洁的导航弹窗样式
.nav-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(10, 15, 30, 0.9);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  
  &.active {
    opacity: 1;
    visibility: visible;
  }
}

.nav-modal-content {
  background: rgba(20, 40, 60, 0.95);
  border: 1px solid rgba(128, 222, 234, 0.6);
  border-radius: 12px;
  padding: 30px;
  width: 90%;
  max-width: 400px;
  box-shadow: 0 0 30px rgba(128, 222, 234, 0.3);
  text-align: center;
}

.nav-modal-header {
  margin-bottom: 20px;
  
  h3 {
    margin: 0;
    color: #80deea;
    font-size: 1.5em;
  }
}

.nav-modal-close {
  position: absolute;
  top: 15px;
  right: 15px;
  background: transparent;
  border: none;
  color: #e0f7fa;
  font-size: 1.5em;
  cursor: pointer;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  transition: all 0.3s ease;
  
  &:hover {
    background: rgba(128, 222, 234, 0.2);
    color: #80deea;
    transform: scale(1.1);
  }
}

.nav-modal-menu {
  list-style: none;
  padding: 0;
  margin: 0;
  
  li {
    margin-bottom: 12px;
    
    &:last-child {
      margin-bottom: 0;
    }
    
    a {
      display: block;
      padding: 15px;
      color: #e0f7fa;
      text-decoration: none;
      border-radius: 8px;
      transition: all 0.3s ease;
      border: 1px solid rgba(128, 222, 234, 0.2);
      
      &:hover {
        background: rgba(128, 222, 234, 0.2);
        color: #80deea;
        border-color: rgba(128, 222, 234, 0.4);
        transform: translateY(-2px);
      }
      
      i {
        margin-right: 10px;
        width: 20px;
        text-align: center;
      }
    }
  }
}

// 简洁的导航按钮样式
.nav-toggle-btn {
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 1000;
  background: rgba(128, 222, 234, 0.2);
  border: 1px solid rgba(128, 222, 234, 0.4);
  border-radius: 50%;
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(5px);
  
  &:hover {
    background: rgba(128, 222, 234, 0.3);
    transform: scale(1.1);
    box-shadow: 0 0 15px rgba(128, 222, 234, 0.4);
  }
  
  .menu-icon {
    display: flex;
    flex-direction: column;
    width: 20px;
    height: 16px;
    justify-content: space-between;
    
    span {
      display: block;
      height: 2px;
      width: 100%;
      background: #80deea;
      border-radius: 1px;
      transition: all 0.3s ease;
    }
  }
}

