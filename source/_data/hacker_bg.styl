// 背景乱码和黑客代码效果
.hacker-code-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -3;
  opacity: 0.15;
  font-family: 'Courier New', monospace;
  color: rgba(0, 255, 255, 0.7);
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
}

.hacker-code-line {
  position: absolute;
  opacity: 0.6;
  animation: hackerCodeFlow linear infinite;
  text-shadow: 0 0 5px rgba(0, 255, 255, 0.5);
}

@keyframes hackerCodeFlow {
  0% {
    transform: translateY(-100vh);
  }
  100% {
    transform: translateY(100vh);
  }
}

// 随机定位的乱码文本
.glitch-text-bg {
  position: fixed;
  color: rgba(255, 0, 255, 0.2);
  font-family: 'Courier New', monospace;
  font-size: 12px;
  pointer-events: none;
  z-index: -4;
  animation: glitchTextRotate 20s infinite linear;
}

@keyframes glitchTextRotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

// 随机浮动的代码片段
.floating-code {
  position: fixed;
  font-family: 'Courier New', monospace;
  color: rgba(0, 255, 255, 0.15);
  font-size: 10px;
  pointer-events: none;
  z-index: -3;
  animation: floatCode linear infinite;
  opacity: 0.3;
}

@keyframes floatCode {
  0% {
    transform: translateY(100vh) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 0.3;
  }
  90% {
    opacity: 0.3;
  }
  100% {
    transform: translateY(-20vh) rotate(360deg);
    opacity: 0;
  }
}

// 静态乱码装饰
.static-glitch {
  position: fixed;
  font-family: 'Courier New', monospace;
  color: rgba(255, 0, 255, 0.05);
  font-size: 16px;
  pointer-events: none;
  z-index: -5;
  opacity: 0.5;
  writing-mode: vertical-rl;
  text-orientation: mixed;
}

// 背景扫描线效果
.scan-line {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 5px;
  background: linear-gradient(to bottom, rgba(0, 255, 255, 0.3), transparent);
  animation: scanLine linear infinite;
  z-index: -2;
  pointer-events: none;
}

@keyframes scanLine {
  0% {
    top: -10%;
  }
  100% {
    top: 110%;
  }
}
