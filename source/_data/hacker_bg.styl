// 背景乱码和黑客代码效果
.hacker-code-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -3;
  opacity: 0.25;
  font-family: 'Courier New', monospace;
  color: rgba(0, 255, 255, 0.9);
  font-size: 16px;
  overflow: hidden;
  white-space: nowrap;
  text-shadow: 0 0 10px rgba(0, 255, 255, 0.7), 0 0 20px rgba(0, 255, 255, 0.5);
}

.hacker-code-line {
  position: absolute;
  opacity: 0.8;
  animation: hackerCodeFlow linear infinite;
  text-shadow: 0 0 10px rgba(0, 255, 255, 0.8), 0 0 20px rgba(0, 255, 255, 0.6);
  font-weight: bold;
}

@keyframes hackerCodeFlow {
  0% {
    transform: translateY(-100vh);
  }
  100% {
    transform: translateY(100vh);
  }
}

// 随机定位的乱码文本
.glitch-text-bg {
  position: fixed;
  color: rgba(255, 0, 255, 0.4);
  font-family: 'Courier New', monospace;
  font-size: 14px;
  pointer-events: none;
  z-index: -4;
  animation: glitchTextRotate 20s infinite linear;
  text-shadow: 0 0 10px rgba(255, 0, 255, 0.6), 0 0 20px rgba(255, 0, 255, 0.4);
  font-weight: bold;
}

@keyframes glitchTextRotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

// 随机浮动的代码片段
.floating-code {
  position: fixed;
  font-family: 'Courier New', monospace;
  color: rgba(0, 255, 255, 0.3);
  font-size: 12px;
  pointer-events: none;
  z-index: -3;
  animation: floatCode linear infinite;
  opacity: 0.5;
  text-shadow: 0 0 8px rgba(0, 255, 255, 0.6), 0 0 15px rgba(0, 255, 255, 0.4);
  font-weight: bold;
}

@keyframes floatCode {
  0% {
    transform: translateY(100vh) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 0.3;
  }
  90% {
    opacity: 0.3;
  }
  100% {
    transform: translateY(-20vh) rotate(360deg);
    opacity: 0;
  }
}

// 静态乱码装饰
.static-glitch {
  position: fixed;
  font-family: 'Courier New', monospace;
  color: rgba(255, 0, 255, 0.15);
  font-size: 18px;
  pointer-events: none;
  z-index: -5;
  opacity: 0.7;
  writing-mode: vertical-rl;
  text-orientation: mixed;
  text-shadow: 0 0 12px rgba(255, 0, 255, 0.8), 0 0 25px rgba(255, 0, 255, 0.6);
  font-weight: bold;
}

// 背景扫描线效果
.scan-line {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 8px;
  background: linear-gradient(to bottom, rgba(0, 255, 255, 0.6), rgba(0, 255, 255, 0.3), transparent);
  animation: scanLine linear infinite;
  z-index: -2;
  pointer-events: none;
  box-shadow: 0 0 15px rgba(0, 255, 255, 0.7);
}

@keyframes scanLine {
  0% {
    top: -10%;
  }
  100% {
    top: 110%;
  }
}
